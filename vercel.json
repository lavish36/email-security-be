{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "python3.11",
      "maxDuration": 60
    }
  },
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}

